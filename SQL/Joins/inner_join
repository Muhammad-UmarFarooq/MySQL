--1)
select item,amount from Orders inner join Customers on Orders.order_id=Customers.customer_id;
--2)
select item,amount,age,first_name from Orders inner join Customers on Orders.order_id=Customers.customer_id;
3)
select item,amount,age,first_name from Orders inner join Customers on Orders.order_id=Customers.customer_id where item != 'Mouse';
4)
select item,amount,age,first_name from Orders join Customers on Orders.order_id=Customers.customer_id where item != 'Mouse';
5)inner join on 3 tables
select item,amount,status from Orders inner join Customers on Orders.order_id=Customers.customer_id inner join Shippings on Orders.order_id = Shippings.shipping_id;

